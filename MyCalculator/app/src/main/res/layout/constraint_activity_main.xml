<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/result"
        android:layout_width="409dp"
        android:layout_height="186dp"
        android:layout_marginBottom="12dp"
        android:layout_weight="1"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        android:textSize="70sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonCE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonCE"
        android:layout_width="85dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="11dp"
        android:layout_weight="1"
        android:text="CE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <Button
        android:id="@+id/buttonC"
        android:layout_width="85dp"
        android:layout_height="100dp"
        android:layout_marginTop="11dp"
        android:layout_weight="1"
        android:text="C"
        app:layout_constraintStart_toEndOf="@+id/buttonCE"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <Button
        android:id="@+id/buttonBS"
        android:layout_width="85dp"
        android:layout_height="100dp"
        android:layout_marginTop="11dp"
        android:layout_weight="1"
        android:text="BS"
        app:layout_constraintStart_toEndOf="@+id/buttonC"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="86dp"
        android:layout_height="100dp"
        android:layout_marginTop="11dp"
        android:layout_weight="1"
        android:text="/"
        app:layout_constraintStart_toEndOf="@+id/buttonBS"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <Button
        android:id="@+id/button7"
        android:layout_width="85dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_weight="1"
        android:text="7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCE" />

    <Button
        android:id="@+id/button8"
        android:layout_width="85dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:text="8"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/buttonC" />

    <Button
        android:id="@+id/button9"
        android:layout_width="85dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:text="9"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/buttonBS" />

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="85dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:text="x"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintTop_toBottomOf="@+id/buttonDivide" />

    <Button
        android:id="@+id/button4"
        android:layout_width="85dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_weight="1"
        android:text="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/button5"
        android:layout_width="85dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:text="5"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button8" />

    <Button
        android:id="@+id/button6"
        android:layout_width="85dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button9" />

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="85dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/buttonMultiply" />

    <Button
        android:id="@+id/button1"
        android:layout_width="85dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_weight="1"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button2"
        android:layout_width="85dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/button3"
        android:layout_width="85dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:text="3"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="85dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:text="+"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/buttonMinus" />

    <Button
        android:id="@+id/buttonNegative"
        android:layout_width="85dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_weight="1"
        android:text="+/-"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <Button
        android:id="@+id/button0"
        android:layout_width="85dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/buttonNegative"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/buttonDecimal"
        android:layout_width="85dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:text="."
        app:layout_constraintStart_toEndOf="@+id/button0"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="85dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:text="="
        app:layout_constraintStart_toEndOf="@+id/buttonDecimal"
        app:layout_constraintTop_toBottomOf="@+id/buttonPlus" />
</androidx.constraintlayout.widget.ConstraintLayout>